<archetype-descriptor name="api-test-template-archetype">
    <fileSets>
        <fileSet>
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <includes>
                <include>pom.xml</include>
                <include>appsettings.json</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</archetype-descriptor>
